#include <string>
#include <vector>
#include <stack>
#define CONDITION 1000000007

using namespace std;

// 피보나치 수열 활용해서 재귀적으로 문제 풀기
int solution(int n) {
    int pi[60001] = {0};
    pi[1] = 1;
    pi[2] = 2;
    int answer = 0;

    for(int i = 3; i <= n; i++) {
        pi[i] = (pi[i-1] + pi[i-2]) % CONDITION;
    }    
    answer = pi[n];
    
    return answer % CONDITION;
}

int main() {
    int n = 4;
    
    return solution(n);
}
