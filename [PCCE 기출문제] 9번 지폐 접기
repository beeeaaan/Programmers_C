#include <vector>
#include <algorithm>

using namespace std;

int solution(vector<int> wallet, vector<int> bill) {
    int answer = 0;

    // 지갑, 지폐의 가로, 세로 길이 각각 정렬(작은 값부터)
    sort(wallet.begin(), wallet.end());
    sort(bill.begin(), bill.end());

    // 지폐 지갑에 들어갈 크기까지 반복
    while (bill[1] > wallet[1] || bill[0] > wallet[0]) {
        // 큰 쪽 반 접고 소수점 버리기
        bill[1] /= 2;
        answer++;

        // bill 다시 정렬하여 큰 값이 항상 bill[1]에 오도록 유지하기
        sort(bill.begin(), bill.end());
    }

    return answer;
}
