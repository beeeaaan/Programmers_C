#include <vector>
#include <queue>
#include <functional>

using namespace std;

int solution(vector<int> scoville, int K) {
    int answer = 0;

    // 우선순위 큐 오름차순
    priority_queue<int, vector<int>, greater<int>> pq;

    // 우선순위 큐 삽입(슼노빌 지수)
    for(int s : scoville)
        pq.push(s);

    // 스코빌 지수 가장 낮은 음식부터
    while(pq.top() < K) {       
        int first_Scoville = pq.top();
        pq.pop();

        // 우선순위 큐 비어있을 경우
        if(pq.empty()) {
            answer = -1;
            break;
        }

        int second_Scoville = pq.top();
        pq.pop();
        
        // 가장 맵지 않은 음식의 스코빌 지수 + (두 번째로 맵지 않은 음식의 스코빌 지수 * 2)
        pq.push(first_Scoville + second_Scoville * 2);      
        answer++;
    }

    return answer;
}
